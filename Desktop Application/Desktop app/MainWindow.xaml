    <Canvas >
        <Button x:Name="manOpBtn" 
                Canvas.Left="50"
                Canvas.Top="50"
                Click="manOpBtn_Click" 
                Width="200"
                Height="200"
                Content="Manual Operation"
                Foreground="BlanchedAlmond"
                FontSize="20"
        Background="DarkSlateGray"  BorderThickness="0" >
           
        </Button>
        
        <TextBox x:Name="roomBox" Canvas.Left="300" Canvas.Top="300" Width="200" Height="80"  Background="BlanchedAlmond"/>
        <Button x:Name="sytemOnBtn" 
                Canvas.Left="300"
                Canvas.Top="50"
                Click="sytemOnBtn_Click" 
                Width="200"
                Height="200"
                Content="System On"
                Foreground="BlanchedAlmond"
                FontSize="20"
                Background="Green"  BorderThickness="0" >
                
        </Button>
        <Button x:Name="sytemOffBtn" 
                Canvas.Left="600"
                Canvas.Top="50"
                Click="sytemOffBtn_Click" 
                Width="200"
                Height="200"
                Content="System Off"
                Foreground="BlanchedAlmond"
                FontSize="20"
                Background="Red"  BorderThickness="0" >
        </Button>
        <Button x:Name="monitoringBtn" 
                Canvas.Left="900"
                Canvas.Top="50"
                Click="monitoringBtn_Click" 
                Width="200"
                Height="200"
                Content="Monitoring"
                Foreground="BlanchedAlmond"
                FontSize="20"
                Background="DarkSlateBlue"  BorderThickness="0" >
        </Button>
        
        
        
    </Canvas>
</Window>
